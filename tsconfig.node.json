{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
